{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./",
    "types": ["cypress", "node"],
    "lib": ["ES5", "DOM"],
    "strict": true,
    "importHelpers": true,
    "declaration": true,
    "typeRoots": ["src/types"],
    "paths": {
      "@tiffinger-thiel/cy-handbook": ["./src/"],
      "@tiffinger-thiel/cy-handbook/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
